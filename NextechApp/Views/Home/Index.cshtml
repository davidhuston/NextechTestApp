<div ng-app="nextechApp">
    <div class="container">
        <div class="navbar-header">
            <div class="navbar-brand">
                Welcome To Hacker News Top 20 News Stories!
            </div>
        </div>
    </div>

    <div ng-controller="StoryListController as vm">
        <div>
            <input type="text" ng-model="vm.searchText" />
            <button type="button" class="btn btn-primary" ng-click="vm.searchItems()">Search</button>
        </div>
        <div style="color: red; font-style:italic" ng-if="vm.searching">
            {{vm.message}}
        </div>

        <div class="container">
            <div class="panel ">
                <div class="panel-body">
                    <table class="table">
                        <thead style="font-weight: bold">
                            <tr>
                                <td>Title</td>
                                <td>Author</td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="story in vm.stories">
                                <td><a target-blank href={{story.url}}>{{story.title}}</a></td>
                                <td>{{story.by}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>